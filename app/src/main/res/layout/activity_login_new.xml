<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivityNew">
    <FrameLayout
        android:layout_width="match_parent"
        android:background="@drawable/login_bg"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center|bottom"
            android:orientation="horizontal"
            android:visibility="invisible"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:background="@android:color/transparent"
                android:layout_width="@dimen/width_120dp"
                android:visibility="invisible"
                android:src="@drawable/panda_hero"
                android:layout_height="@dimen/width_120dp"
                />

            <ImageView
                android:background="@android:color/transparent"
                android:id="@+id/panda_video"
                android:layout_width="@dimen/width_120dp"
                android:visibility="visible"
                android:src="@drawable/panda_hero"
                android:layout_height="@dimen/width_120dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="-20dp"
            android:layout_weight="1">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="6"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4">
                <ImageView
                    android:layout_width="wrap_content"
                    android:scaleType="fitStart"
                    android:layout_height="wrap_content"
                    android:src="@drawable/panda_imageview"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="-200dp"

                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center|bottom"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:background="@android:color/transparent"
                        android:layout_width="@dimen/width_120dp"
                        android:visibility="invisible"
                        android:src="@drawable/panda_hero"
                        android:layout_height="@dimen/width_120dp"
                        />

                    <ImageView
                        android:background="@android:color/transparent"
                        android:layout_width="@dimen/width_120dp"
                        android:visibility="visible"
                        android:src="@drawable/panda_hero"
                        android:layout_height="@dimen/width_120dp"
                        />

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/width_150"
                    android:layout_height="@dimen/width_150"
                    android:src="@drawable/ic_logo_tree"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/new_loginButton"
                        android:layout_width="@dimen/width_150"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_height="@dimen/height_40"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/reglisse_fill"
                        android:textSize="@dimen/text_27"
                        android:background="@drawable/login_button_bg"
                        android:text="@string/new_login"
                        android:visibility="visible"
                        android:paddingBottom="5dp"
                        android:textColor="@color/white" />
                    <EditText
                        android:layout_width="@dimen/width_150"
                        android:hint="@string/new_login"
                        android:layout_marginTop="@dimen/padding_5"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:gravity="center"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:textSize="@dimen/text_27"
                        android:fontFamily="@font/reglisse_fill"
                        android:paddingBottom="5dp"
                        android:background="@drawable/login_button_bg"
                        android:layout_height="@dimen/height_40"/>

                    <Button
                        android:id="@+id/new_signUpButton"
                        android:layout_width="@dimen/width_150"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_height="@dimen/height_40"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/reglisse_fill"
                        android:textSize="@dimen/text_27"
                        android:background="@drawable/login_button_bg"
                        android:text="@string/new_signup"
                        android:paddingBottom="5dp"
                        android:textColor="@color/white" />


                    <TextView
                        android:layout_width="@dimen/width_150"
                        android:layout_height="wrap_content"
                        android:background="@drawable/login_button_bg"
                        android:fontFamily="@font/reglisse"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:text="LOGIN"
                        android:textSize="@dimen/text_27"/>
                    <TextView
                        android:layout_width="@dimen/width_150"
                        android:layout_height="wrap_content"
                        android:background="@drawable/login_button_bg"
                        android:fontFamily="@font/reglisse"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:visibility="gone"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:textSize="@dimen/text_size_30sp"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:text="SIGN UP"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
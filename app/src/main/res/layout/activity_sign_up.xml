<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/login_bg"
                android:gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center|bottom"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="6"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="4">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:scaleType="fitStart"
                            android:layout_height="wrap_content"
                            android:src="@drawable/panda_imageview"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="center|top"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="@dimen/margin_30"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_marginTop="@dimen/padding_10"
                            android:layout_width="@dimen/width_150"
                            android:layout_height="@dimen/width_150"
                            android:src="@drawable/ic_logo_tree"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/button_height_60"
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/padding_10_dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="right|center"
                                android:layout_marginRight="@dimen/margin_8dp"
                                android:layout_weight="1">
                                <ImageButton
                                    android:id="@+id/google_login_regis"
                                    style="@android:style/Widget.ImageButton"
                                    android:layout_width="match_parent"
                                    android:scaleType="fitEnd"
                                    android:layout_margin="5dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="right|center"
                                    android:background="@android:color/transparent"
                                    app:srcCompat="@drawable/new_ggogle" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="left|center"
                                android:layout_marginLeft="@dimen/margin_8dp"
                                android:gravity="left|center"
                                android:layout_weight="1">

                                <ImageButton
                                    android:id="@+id/fb_login_regis"
                                    style="@android:style/Widget.ImageButton"
                                    android:layout_width="match_parent"
                                    android:scaleType="fitStart"
                                    android:layout_margin="5dp"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent"
                                    app:srcCompat="@drawable/new_fb" />
                            </LinearLayout>
                        </LinearLayout>

                        <EditText
                            android:id="@+id/register_student_name"
                            android:layout_width="match_parent"
                            android:hint="@string/new_studetn_name"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:paddingStart="20dp"
                            android:inputType="text"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/text_27"
                            android:layout_marginTop="@dimen/margin_10"
                            android:fontFamily="@font/reglisse_fill"
                            android:background="@drawable/rect_edittext_bg"
                            android:layout_height="@dimen/height_50"/>
                        <EditText
                            android:id="@+id/register_email"
                            android:layout_width="match_parent"
                            android:hint="@string/email_id"
                            android:layout_marginTop="@dimen/margin_10"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:paddingStart="20dp"
                            android:inputType="textEmailAddress"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/text_27"
                            android:fontFamily="@font/reglisse_fill"
                            android:background="@drawable/rect_edittext_bg"
                            android:layout_height="@dimen/height_50"/>
                        <EditText
                            android:id="@+id/register_mobile"
                            android:layout_width="match_parent"
                            android:hint="@string/mobileNoStr"
                            android:layout_marginTop="@dimen/margin_10"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:paddingStart="20dp"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/text_27"
                            android:inputType="number"
                            android:fontFamily="@font/reglisse_fill"
                            android:background="@drawable/rect_edittext_bg"
                            android:layout_height="@dimen/height_50"/>
                        <EditText
                            android:id="@+id/register_password"
                            android:layout_width="match_parent"
                            android:hint="@string/new_password"
                            android:layout_marginTop="@dimen/margin_10"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:paddingStart="20dp"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/text_27"
                            android:inputType="textPassword"
                            android:fontFamily="@font/reglisse_fill"
                            android:background="@drawable/rect_edittext_bg"
                            android:layout_height="@dimen/height_50"/>
                        <EditText
                            android:id="@+id/register_class_str"
                            android:layout_width="match_parent"
                            android:hint="@string/new_class"
                            android:layout_marginTop="@dimen/margin_10"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:paddingStart="20dp"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/text_27"
                            android:inputType="text"
                            android:visibility="gone"
                            android:fontFamily="@font/reglisse_fill"
                            android:background="@drawable/rect_edittext_bg"
                            android:layout_height="@dimen/height_50"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/margin_10"
                            android:layout_height="@dimen/height_50">

                            <Spinner
                                android:id="@+id/classSpinnerSignUp_new"
                                style="@style/SpinnerStyle1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="right"
                                android:layout_marginHorizontal="2dp"
                                android:background="@drawable/rect_edittext_bg"
                                android:fontFamily="@font/reglisse_fill"
                                android:gravity="center_vertical"
                                android:paddingStart="10dp"
                                android:popupBackground="@drawable/pop_up_bg"
                                android:spinnerMode="dropdown"
                                android:textSize="@dimen/text_27"
                                android:visibility="visible" />

                            <ImageView
                                android:id="@+id/show_pass_btn_register_new"
                                android:layout_width="@dimen/button_30"
                                android:layout_height="@dimen/button_30"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"
                                android:paddingRight="17dp"
                                app:tint="@color/white"
                                android:src="@drawable/spinner_down" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/margin_10"
                            android:layout_height="@dimen/height_50">

                            <Spinner
                                android:id="@+id/classSpinnerSignUp"
                                style="@style/SpinnerStyle1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="right"
                                android:layout_marginHorizontal="2dp"
                                android:background="@drawable/rect_edittext_bg"
                                android:fontFamily="@font/reglisse_fill"
                                android:gravity="center_vertical"
                                android:paddingStart="10dp"
                                android:popupBackground="@drawable/pop_up_bg"
                                android:spinnerMode="dropdown"
                                android:textSize="@dimen/text_27"
                                android:visibility="visible" />

                            <ImageView
                                android:id="@+id/show_pass_btn_register"
                                android:layout_width="@dimen/button_30"
                                android:layout_height="@dimen/button_30"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"
                                android:paddingRight="17dp"
                                app:tint="@color/white"
                                android:src="@drawable/spinner_down" />
                        </RelativeLayout>

                        <!--                    <EditText-->
                        <!--                        android:layout_width="wrap_content"-->
                        <!--                        android:hint="@string/new_gender"-->
                        <!--                        android:layout_marginTop="@dimen/padding_10_dp"-->
                        <!--                        android:textColor="@color/white"-->
                        <!--                        android:textColorHint="@color/white"-->
                        <!--                        android:paddingStart="20dp"-->
                        <!--                        android:gravity="center_vertical"-->
                        <!--                        android:textSize="@dimen/text_27"-->
                        <!--                        android:fontFamily="@font/reglisse_fill"-->
                        <!--                        android:background="@drawable/rect_edittext_bg"-->
                        <!--                        android:layout_height="@dimen/height_50"/>-->
                        <!--                    <Button-->
                        <!--                        android:id="@+id/register_signupButton"-->
                        <!--                        android:layout_width="@dimen/width_150"-->
                        <!--                        style="@style/Widget.AppCompat.Button.Borderless"-->
                        <!--                        android:layout_height="@dimen/height_40"-->
                        <!--                        android:layout_gravity="center"-->
                        <!--                        android:layout_marginTop="15dp"-->
                        <!--                        android:fontFamily="@font/reglisse_fill"-->
                        <!--                        android:textSize="@dimen/text_27"-->
                        <!--                        android:background="@drawable/login_button_bg"-->
                        <!--                        android:text="@string/new_signup"-->
                        <!--                        android:paddingBottom="5dp"-->
                        <!--                        android:textColor="@color/white" />-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/margin_2"
                            android:layout_gravity="center"
                            android:gravity="center"
                            tools:ignore="RtlHardcoded">
                            <CheckBox
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:id="@+id/sign_mobile_checkbox"
                                android:textColor="@color/white"/>
                            <TextView
                                android:id="@+id/sign_mobile_checkbox_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" Do you want to sign with mobile?"
                                android:textSize="@dimen/text_16"
                                android:fontFamily="@font/reglisse_fill"
                                android:paddingEnd="5dp"
                                android:textAllCaps="true"
                                android:textColor="@color/white"
                                tools:ignore="RtlSymmetry" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/margin_2"
                            android:layout_gravity="center"
                            android:gravity="center"
                            tools:ignore="RtlHardcoded">
                            <CheckBox
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:id="@+id/t_c_checkbox"
                                android:textColor="@color/white"/>
                            <TextView
                                android:id="@+id/t_c_checkbox_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/terms_amp_conditions"
                                android:textSize="@dimen/text_16"
                                android:fontFamily="@font/reglisse_fill"
                                android:paddingEnd="5dp"
                                android:textAllCaps="true"
                                android:textColor="@color/white"
                                tools:ignore="RtlSymmetry" />
                        </LinearLayout>


                        <Button
                            android:id="@+id/register_signupButton"
                            android:layout_width="@dimen/width_150"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_height="@dimen/height_40"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/padding_10_dp"
                            android:fontFamily="@font/reglisse_fill"
                            android:textSize="@dimen/text_27"
                            android:visibility="visible"
                            android:gravity="center"
                            android:background="@drawable/login_button_bg"
                            android:text="@string/new_signup"
                            android:paddingBottom="5dp"
                            android:textColor="@color/white" />

                    </LinearLayout>

                </ScrollView>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/new_sign_up_back"
                android:layout_width="@dimen/height_50"
                android:layout_height="@dimen/height_50"
                android:layout_gravity="end"
                android:orientation="vertical"
                android:background="@drawable/login_back_button"
                android:layout_margin="10dp">

            </LinearLayout>

        </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
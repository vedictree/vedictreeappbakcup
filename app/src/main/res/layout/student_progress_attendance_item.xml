<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:gravity="center"
    android:background="@drawable/ic_red_background_full"
android:layout_gravity="center_horizontal"
android:layout_height="@dimen/row_40dp">
    <TextView
        android:id="@+id/day_string"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Today"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="@dimen/text_16"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/time_string"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="12:00 PM"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="@dimen/text_16"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/p_a_string"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Present"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_margin="2dp"
        android:textSize="@dimen/text_16"
        android:background="@drawable/drawable_edit_text"
        android:layout_weight="1"/>


</LinearLayout>
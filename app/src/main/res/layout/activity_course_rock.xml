<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/videos_bg"
    tools:context="com.vedictree.preschool.CourseRock">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <Button
                    android:id="@+id/course_rock"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/margin_start_25dp"
                    android:layout_marginVertical="@dimen/horizontal_margin_10dp"
                    android:background="@drawable/cloud"
                    android:text="Nursery"
                    android:textColor="@color/app_red"
                    android:textStyle="bold"
                    android:fontFamily="@font/s_i"
                    android:textSize="30sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:text="VEDIC TREE"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:fontFamily="@font/s_i"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:text="Rock star"
                    android:textColor="#FF4739"
                    android:textStyle="bold"
                    android:fontFamily="@font/s_i"
                    android:layout_gravity="center"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="25dp"
                android:layout_marginHorizontal="@dimen/margin_start_25dp"
                android:orientation="vertical"
                android:background="@drawable/ic_rock_bg">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="500dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/rock_top_image"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:scaleType="fitXY"
                            android:layout_marginHorizontal="@dimen/margin_start_25dp"
                            android:background="@android:color/transparent"
                             />
                        <TextView
                            android:id="@+id/pdf_rock"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/light_yellow_background"
                            android:text="@string/showCourseDetail"
                            android:layout_marginHorizontal="20dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/horizontal_margin_10dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="@dimen/text_16"/>

                        <TextView
                            android:id="@+id/show_rock"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="@dimen/horizontal_margin_10dp"
                            android:background="@drawable/ic_red_background_full"
                            android:clickable="true"
                            android:gravity="center"
                            android:text="@string/showDetailHD"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_16"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/ic_rock_background"
                            android:layout_marginHorizontal="25dp"
                            android:orientation="vertical">
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="15dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ic_rock_background"
                                    android:orientation="vertical">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:layout_marginTop="5dp"
                                        android:orientation="horizontal">
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:textColor="@color/black"
                                            android:text="PARTICULARS"
                                            android:layout_gravity="center"
                                            android:textStyle="bold"
                                            android:layout_weight="1"
                                            android:gravity="center|left"
                                            android:layout_marginStart="5dp"/>
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:textColor="@color/black"
                                            android:text="AMOUNT"
                                            android:layout_weight="1"
                                            android:layout_gravity="center"
                                            android:textStyle="bold"
                                            android:gravity="center"
                                            android:layout_marginStart="5dp"/>

                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:background="#89C7F8"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="5dp"
                                            android:layout_weight="1"
                                            android:gravity="center|left"
                                            android:text="@string/school_fees"
                                            android:textColor="@color/black"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/rock_annual_fee"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="5dp"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:textColor="@color/black"
                                            android:textStyle="bold" />

                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:orientation="horizontal">
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="5dp"
                                            android:layout_weight="1"
                                            android:gravity="center|left"
                                            android:text="@string/kit_charges"
                                            android:textColor="@color/black"
                                            android:textStyle="bold" />
                                        <TextView
                                            android:id="@+id/rock_book"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="5dp"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:textColor="@color/black"
                                            android:textStyle="bold" />
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:background="#89C7F8"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="5dp"
                                            android:layout_weight="1"
                                            android:gravity="center|left"
                                            android:text="TOTAL FEES"
                                            android:textColor="@color/black"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/rock_total_fee"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="5dp"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:textColor="@color/black"
                                            android:textStyle="bold" />

                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:orientation="horizontal">
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="5dp"
                                            android:layout_weight="1"
                                            android:gravity="center|left"
                                            android:text="DISCOUNT @50%"
                                            android:textColor="@color/black"
                                            android:textStyle="bold" />
                                        <TextView
                                            android:id="@+id/rock_gst"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="5dp"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:textColor="@color/black"
                                            android:textStyle="bold" />
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:background="#89C7F8"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="5dp"
                                            android:layout_weight="1"
                                            android:gravity="center|left"
                                            android:text="TOTAL AMOUNT"
                                            android:textColor="@color/black"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/rock_total_amount"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="5dp"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:textColor="@color/black"
                                            android:textStyle="bold" />
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="25dp"
                                        android:orientation="horizontal">
                                    </LinearLayout>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                        <Button
                            android:id="@+id/rock_pay_now"
                            android:layout_width="200dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="-25dp"
                            android:layout_marginHorizontal="@dimen/horizontal_margin_40dp"
                            android:textStyle="bold"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:textColor="@color/white"
                            android:background="@drawable/ic_pay_button_bg"
                            android:text="PAY NOW"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"/>

                    </LinearLayout>
                </ScrollView>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/course_rock_back"
            android:layout_width="@dimen/height_50"
            android:layout_height="@dimen/height_50"
            android:layout_gravity="start"
            android:orientation="vertical"
            android:background="@drawable/login_back_button"
            android:layout_margin="2dp">

        </LinearLayout>

    </FrameLayout>
</LinearLayout>
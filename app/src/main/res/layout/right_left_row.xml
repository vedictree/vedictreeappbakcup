<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/left_layout"
        android:layout_gravity="left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="30dp"
            android:background="@drawable/drawable_edit_text"
            android:orientation="vertical">
            <FrameLayout
                style="?attr/actionButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:focusable="true">
                <ImageView
                    android:id="@+id/left_download"
                    android:layout_width="@dimen/button_30"
                    android:layout_height="@dimen/button_30"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_baseline_arrow_circle_down_24"
                    app:tint="@color/black" />
                <ImageView
                    android:id="@+id/left_upload_image"
                    android:layout_width="@dimen/button_width_200"
                    android:layout_height="@dimen/button_width_200"
                    android:layout_gravity="center"

                    />
<!--                <ImageView-->
<!--                    android:layout_width="20dp"-->
<!--                    android:layout_height="20dp"-->
<!--                    android:src="@drawable/ic_baseline_check_circle_outline_24"-->
<!--                    android:layout_gravity="end|bottom"/>-->
                <TextView
                    android:id="@+id/msgr_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginEnd="10dp"
                    android:paddingBottom="15dp"
                    android:paddingRight="15dp"
                    android:text="Hello !!!"
                    android:paddingTop="5dp"
                    android:inputType=""
                    android:fontFamily="@font/reglisse_fill"
                    android:textSize="@dimen/text_16"
                    android:textColor="@color/black" />


                <TextView
                    android:id="@+id/chat_day_text_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|end|bottom"
                    android:layout_marginEnd="2dp"
                    android:layout_marginTop="10dp"
                    android:gravity="bottom"
                    android:padding="5dp"
                    android:drawablePadding="5dp"
                    android:textColor="@color/black"
                    android:text="2 day ago"
                    android:textSize="@dimen/text_11"
                    tools:ignore="SmallSp" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/righ_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:visibility="visible"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:visibility="visible"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/drawable_edit_text"
            android:orientation="vertical">

            <FrameLayout
                style="?attr/actionButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:visibility="visible"
                android:focusable="true">
                <ImageView
                    android:id="@+id/right_download"
                    android:layout_width="@dimen/button_30"
                    android:layout_height="@dimen/button_30"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_baseline_arrow_circle_down_24"
                    app:tint="@color/black" />
                <ImageView
                    android:id="@+id/right_upload_image"
                    android:layout_width="@dimen/button_width_200"
                    android:layout_height="@dimen/button_width_200"

                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/msgr_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginEnd="10dp"
                    android:paddingBottom="15dp"
                    android:paddingRight="15dp"
                    android:text="Hello !!!"
                    android:paddingTop="5dp"
                    android:inputType=""
                    android:fontFamily="@font/reglisse_fill"
                    android:textSize="@dimen/text_16"
                    android:textColor="@color/black" />
                <TextView
                    android:id="@+id/chat_day_text_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|end|bottom"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="2dp"
                    android:gravity="bottom"
                    android:padding="5dp"
                    android:drawableRight="@drawable/ic_baseline_check_circle_outline_24"
                    android:drawablePadding="5dp"
                    android:text="2 day ago"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_11"
                    tools:ignore="SmallSp" />
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>


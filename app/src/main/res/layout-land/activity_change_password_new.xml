<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/videos_bg"
    tools:context="com.vedictree.preschool.ChangePasswordNew"
    tools:ignore="MissingDefaultResource">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="7.5"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <ImageView
                            android:id="@+id/change_password_back_to_home_button"
                            android:layout_width="@dimen/button_40"
                            android:layout_margin="5dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/login_back_button"/>

                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:layout_gravity="center"
                android:gravity="center|top"
                android:orientation="vertical">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/padding_5"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="15dp"
                    android:background="@android:color/transparent"
                    android:text="Change Password"
                    android:textColor="@color/white"
                    android:paddingBottom="5dp"
                    android:fontFamily="@font/reglisse_fill"
                    android:textSize="@dimen/text_size_20"/>

                <EditText
                    android:id="@+id/change_password_mobile"
                    android:layout_width="@dimen/width_300"
                    android:hint="@string/new_username"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:paddingStart="20dp"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_27"
                    android:inputType="number"
                    android:fontFamily="@font/reglisse_fill"
                    android:background="@drawable/rect_edittext_bg"
                    android:layout_height="@dimen/height_50"/>

                <RelativeLayout
                    android:layout_width="@dimen/width_300"
                    android:layout_height="@dimen/height_50"
                    android:layout_marginTop="@dimen/padding_10_dp">
                    <EditText
                        android:id="@+id/change_password_new"
                        android:layout_width="match_parent"
                        android:hint="@string/enterOldPassword"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:paddingStart="20dp"
                        android:inputType="textPassword"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/text_27"
                        android:fontFamily="@font/reglisse_fill"
                        android:background="@drawable/rect_edittext_bg"
                        android:layout_height="match_parent"/>

                    <ImageView
                        android:id="@+id/show_pass_btn_change_password_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:paddingRight="10dp"
                        android:onClick="ShowHidePass"
                        android:src="@drawable/eye"
                        app:tint="@color/white" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="@dimen/width_300"
                    android:layout_height="@dimen/height_50"
                    android:layout_marginTop="@dimen/padding_10_dp">

                    <EditText
                        android:id="@+id/change_password_old"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rect_edittext_bg"
                        android:fontFamily="@font/reglisse_fill"
                        android:gravity="center_vertical"
                        android:hint="@string/enterNewPassword"
                        android:paddingStart="20dp"
                        android:inputType="textPassword"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/text_27" />
                    <ImageView
                        android:id="@+id/show_pass_btn_change_password_new"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:paddingRight="10dp"
                        android:onClick="ShowHidePass"
                        android:src="@drawable/eye"
                        app:tint="@color/white"/>

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_40"
                    android:layout_gravity="center"
                    android:visibility="visible"
                    android:layout_marginTop="@dimen/padding_5"
                    android:gravity="center">
                    <Button
                        android:id="@+id/submit_change_password_new"
                        android:layout_width="@dimen/width_150"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:fontFamily="@font/reglisse_fill"
                        android:textSize="@dimen/text_27"
                        android:paddingBottom="5dp"
                        android:background="@drawable/login_button_bg"
                        android:text="@string/submitButton"
                        android:gravity="center"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end|top"
            android:gravity="top|end"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/change_password_logo"
                android:layout_width="@dimen/width_300"
                android:layout_height="@dimen/height_120dp"
                android:layout_marginTop="@dimen/margin_minus_20"
                />
        </LinearLayout>


    </FrameLayout>
</LinearLayout>
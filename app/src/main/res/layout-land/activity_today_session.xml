<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TodaySessionActivity"
    tools:ignore="MissingDefaultResource">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/videos_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:layout_marginBottom="-35dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="-20dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="3">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="20dp"
                        android:gravity="left"
                        android:weightSum="10"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/today_video_day_home"
                                    android:layout_width="@dimen/height_70dp"
                                    android:scaleType="fitCenter"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/activity_home"/>
                                <LinearLayout
                                    android:id="@+id/today_day_month_ll"
                                    android:layout_width="match_parent"
                                    android:layout_marginVertical="8dp"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                    <Button
                                        android:id="@+id/today_video_month_button"
                                        style="@style/Widget.AppCompat.Button.Borderless"
                                        android:layout_width="@dimen/button_80"
                                        android:layout_height="match_parent"
                                        android:layout_marginVertical="@dimen/margin_2"
                                        android:layout_marginLeft="2dp"
                                        android:layout_marginRight="@dimen/margin_2"
                                        android:background="@drawable/video_month_button"
                                        tools:ignore="SpeakableTextPresentCheck" />
                                    <LinearLayout
                                        android:layout_width="@dimen/button_40"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">
                                        <Button
                                            android:id="@+id/today_month"
                                            android:layout_width="match_parent"
                                            android:layout_margin="@dimen/margin_2dp"
                                            android:layout_height="match_parent"
                                            android:text="5"
                                            android:paddingEnd="8dp"
                                            style="@style/Widget.AppCompat.Button.Borderless"
                                            android:textColor="@color/white"
                                            android:gravity="center"
                                            android:textStyle="bold"
                                            android:textAlignment="gravity"
                                            android:textSize="@dimen/text_16"
                                            android:layout_gravity="center"
                                            android:background="@drawable/video_truangle_two"/>
                                    </LinearLayout>
                                    <Button
                                        android:id="@+id/today_video_day_button"
                                        android:layout_width="@dimen/button_80"
                                        android:background="@drawable/video_day_button"
                                        android:visibility="visible"
                                        android:layout_marginVertical="@dimen/margin_2"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="@dimen/margin_2"
                                        style="@style/Widget.AppCompat.Button.Borderless"
                                        android:layout_height="match_parent"
                                        />
                                    <LinearLayout
                                        android:layout_width="@dimen/button_40"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">
                                        <Button
                                            android:id="@+id/today_day"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:text="14"
                                            android:layout_margin="@dimen/margin_2dp"
                                            android:paddingEnd="8dp"
                                            style="@style/Widget.AppCompat.Button.Borderless"
                                            android:textColor="@color/white"
                                            android:gravity="center"
                                            android:textStyle="bold"
                                            android:textAlignment="gravity"
                                            android:textSize="@dimen/text_16"
                                            android:layout_gravity="center"
                                            android:background="@drawable/video_truangle_two"/>

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/left_35"
                    android:orientation="horizontal"
                    android:layout_weight="3">
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/today_video_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:visibility="visible"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="7">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/today_morning_routine_button"
                            android:layout_width="@dimen/width_160"
                            android:layout_height="match_parent"
                            android:text="MORNING\nROUTINE"
                            android:textSize="@dimen/text_27"
                            android:textStyle="bold"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:fontFamily="@font/reglisse_fill"
                            android:background="@drawable/morning_routine_bg"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/today_curriculum"
                            android:layout_width="@dimen/width_160"
                            android:layout_height="match_parent"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:text="CURRICULUM"
                            android:textSize="@dimen/text_27"
                            android:textStyle="bold"
                            android:fontFamily="@font/reglisse_fill"
                            android:background="@drawable/curriculum_bg"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/today_extra_curriculum"
                            android:layout_width="@dimen/width_160"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:text="EXTRA\nCURRICULUM"
                            android:textSize="@dimen/text_27"
                            android:textStyle="bold"
                            android:fontFamily="@font/reglisse_fill"
                            android:background="@drawable/extra_curriculum_bg"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3">
                    <LinearLayout
                        android:id="@+id/today_extra_curriculum_ll_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:visibility="gone"
                        android:layout_marginStart="@dimen/vert_7"
                        android:orientation="horizontal">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/today_extra_curriculum_recyclerview_2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center" />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/today_curriculum_ll_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="visible"
                        android:layout_marginStart="@dimen/margin_10"
                        android:orientation="horizontal">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/today_curriculum_recyclerview_2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center" />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/today_morning_ll_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:layout_marginStart="@dimen/vert_7"
                        android:orientation="horizontal">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/today_morning_recyclerview_2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end|top"
            android:gravity="top|end"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/today_video_session_logo"
                android:layout_width="@dimen/width_300"
                android:layout_height="@dimen/height_120dp"
                android:layout_marginTop="@dimen/margin_minus_20"
                android:visibility="gone"
                android:paddingBottom="20dp"
                />
            <Button
                android:id="@+id/previousButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_50"
                android:text="Previous Day"
                android:background="@drawable/gradiant_green"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:paddingHorizontal="15sp"
                android:textSize="@dimen/text_18"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="@font/reglisse_fill"/>
        </LinearLayout>

    </FrameLayout>

</LinearLayout>
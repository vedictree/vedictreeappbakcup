<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/videos_bg"
    tools:context="com.vedictree.preschool.CourseTwinking">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="UselessParent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/margin_start_25dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|end"
                        android:layout_weight="7"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="30sp"
                            android:text="VEDIC TREE     "
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:fontFamily="@font/s_i"
                            android:gravity="center|end"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="30sp"
                            android:text="@string/twinking_star"
                            android:fontFamily="@font/s_i"
                            android:textColor="#FF4739"
                            android:textStyle="bold"
                            android:gravity="center|end"/>
                    </LinearLayout>
                    <Button
                        android:id="@+id/twink_course"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/horizontal_margin_10dp"
                        android:background="@drawable/cloud"
                        android:text="@string/nursery"
                        android:textColor="@color/app_red"
                        android:textStyle="bold"
                        android:layout_weight="3"
                        android:textSize="30sp"
                        android:fontFamily="@font/s_i"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/light_green_background"
                android:layout_marginVertical="25dp"
                android:layout_marginHorizontal="@dimen/margin_start_25dp"

                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="UselessParent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/courses_twink_top"
                                android:layout_width="match_parent"
                                android:layout_height="220dp"
                                android:scaleType="fitXY"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="20dp"
                                android:background="@android:color/transparent"
                                android:contentDescription="@string/todo" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/pdf_twink"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/button_land_60dp"
                                    android:background="@drawable/ic_purple_bg"
                                    android:text="@string/showCourseDetail"
                                    android:layout_marginHorizontal="20dp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:textSize="@dimen/text_18"/>
                                <TextView
                                    android:id="@+id/show_twink"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/button_land_60dp"
                                    android:background="@drawable/ic_red_background_full"
                                    android:text="@string/showDetailHD"
                                    android:layout_marginHorizontal="20dp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:layout_marginTop="5dp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:textSize="@dimen/text_18"/>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/ic_green_new"
                            android:layout_marginHorizontal="25dp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="match_parent">
                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardCornerRadius="15dp">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/ic_green_new"
                                        android:orientation="vertical">
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/button_land_60dp"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:layout_marginStart="5dp"
                                                android:layout_weight="1"
                                                android:textSize="@dimen/text_18"
                                                android:gravity="center|left"
                                                android:text="@string/particulars"
                                                android:textColor="@color/black"
                                                android:textStyle="bold"
                                                tools:ignore="RtlHardcoded" />

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:layout_marginStart="5dp"
                                                android:layout_weight="1"
                                                android:textSize="@dimen/text_18"
                                                android:gravity="center"
                                                android:text="@string/amount"
                                                android:textColor="@color/black"
                                                android:textStyle="bold" />

                                        </LinearLayout>
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/button_land_60dp"
                                            android:background="#52CD9D"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:layout_marginStart="5dp"
                                                android:layout_weight="1"
                                                android:textSize="@dimen/text_18"
                                                android:gravity="center|left"
                                                android:text="@string/school_fees"
                                                android:textColor="@color/black"
                                                android:textStyle="bold"
                                                tools:ignore="RtlHardcoded" />

                                            <TextView
                                                android:id="@+id/twink_annual_fee"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:layout_marginStart="5dp"
                                                android:layout_weight="1"
                                                android:gravity="center"
                                                android:textSize="@dimen/text_18"
                                                android:textColor="@color/black"
                                                android:textStyle="bold" />

                                        </LinearLayout>
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/button_land_60dp"
                                            android:orientation="horizontal">
                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:layout_marginStart="5dp"
                                                android:layout_weight="1"
                                                android:textSize="@dimen/text_18"
                                                android:gravity="center|left"
                                                android:text="@string/kit_charges"
                                                android:textColor="@color/black"
                                                android:textStyle="bold"
                                                tools:ignore="RtlHardcoded" />
                                            <TextView
                                                android:id="@+id/twink_book"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:layout_marginStart="5dp"
                                                android:layout_weight="1"
                                                android:gravity="center"
                                                android:textSize="@dimen/text_18"
                                                android:textColor="@color/black"
                                                android:textStyle="bold" />
                                        </LinearLayout>
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/button_land_60dp"
                                            android:background="#52CD9D"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:layout_marginStart="5dp"
                                                android:layout_weight="1"
                                                android:textSize="@dimen/text_18"
                                                android:gravity="center|left"
                                                android:text="@string/total_fees"
                                                android:textColor="@color/black"
                                                android:textStyle="bold"
                                                tools:ignore="RtlHardcoded" />

                                            <TextView
                                                android:id="@+id/twink_total_fee"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:layout_marginStart="5dp"
                                                android:layout_weight="1"
                                                android:gravity="center"
                                                android:textSize="@dimen/text_18"
                                                android:textColor="@color/black"
                                                android:textStyle="bold" />

                                        </LinearLayout>
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/button_land_60dp"
                                            android:orientation="horizontal">
                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:textSize="@dimen/text_18"
                                                android:layout_marginStart="5dp"
                                                android:layout_weight="1"
                                                android:gravity="center|left"
                                                android:text="DISCOUNT @50%"
                                                android:textColor="@color/black"
                                                android:textStyle="bold"
                                                tools:ignore="RtlHardcoded" />
                                            <TextView
                                                android:id="@+id/twink_gst"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:textSize="@dimen/text_18"
                                                android:layout_marginStart="5dp"
                                                android:layout_weight="1"
                                                android:gravity="center"
                                                android:textColor="@color/black"
                                                android:textStyle="bold" />
                                        </LinearLayout>
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/button_land_60dp"
                                            android:background="#52CD9D"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:layout_marginStart="5dp"
                                                android:textSize="@dimen/text_18"
                                                android:layout_weight="1"
                                                android:gravity="center|left"
                                                android:text="@string/total_amount"
                                                android:textColor="@color/black"
                                                android:textStyle="bold"
                                                tools:ignore="RtlHardcoded" />

                                            <TextView
                                                android:id="@+id/twink_total_amount"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:layout_marginStart="5dp"
                                                android:textSize="@dimen/text_18"
                                                android:layout_weight="1"
                                                android:gravity="center"
                                                android:textColor="@color/black"
                                                android:textStyle="bold" />
                                        </LinearLayout>
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="35dp"
                                            android:orientation="horizontal">
                                        </LinearLayout>

                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>

                        </LinearLayout>
                        <Button
                            android:id="@+id/twink_pay_now"
                            android:layout_width="200dp"
                            android:layout_height="@dimen/button_land_60dp"
                            android:textSize="@dimen/text_18"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_gravity="center"
                            android:layout_marginTop="-35dp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:background="@drawable/ic_pay_button_bg"
                            android:text="@string/pay_now"/>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/course_twink_back"
            android:layout_width="@dimen/height_50"
            android:layout_height="@dimen/height_50"
            android:layout_gravity="start"
            android:orientation="vertical"
            android:background="@drawable/login_back_button"
            android:layout_margin="2dp">

        </LinearLayout>

    </FrameLayout>
</LinearLayout>